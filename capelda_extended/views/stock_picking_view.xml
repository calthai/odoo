<odoo>
    <record id="stock_picking_view_form_itaas_inherit" model="ir.ui.view">
        <field name="name">stock.picking.view.form.itaas</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="attributes">
                <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
            </field>

            <field name="location_id" position="attributes">
                <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
            </field>
            <field name="location_dest_id" position="attributes">
                <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
            </field>

            <field name="move_lines" position="attributes">
                <attribute name="attrs">{'readonly': False}</attribute>
            </field>
            <field name="origin" position="attributes">
                <attribute name="attrs">{'required': [('picking_type_code', '=', 'outgoing')]}</attribute>
            </field>
            <field name="origin" position="after">
                <field name="is_selected" invisible="1"/>
                <field name="is_checked" invisible="1"/>
                <field name="is_gen_lot" invisible="1"/>
                <field name="is_put_in_pack" invisible="1"/>
            </field>
            <button name="button_scrap" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <field name="group_id" position="after">
                <field name="rec_ref_id" readonly="1" attrs="{'invisible': [('picking_type_code','!=','internal')]}"/>
                <field name="int_ref_id" readonly="1" attrs="{'invisible': [('picking_type_code','!=','incoming')]}"/>
            </field>

            <xpath expr="//sheet/notebook/page[1]" position="replace"/>

            <xpath expr="//sheet/notebook/page[2]" position="before">
                <page string="Detailed Operations">
                    <field name="move_line_ids" attrs="{'readonly': [('state', '=', 'done'), ('is_locked', '=', True)]}" context="{'default_picking_id': id, 'default_location_id': location_id, 'default_location_dest_id': location_dest_id}">
                        <tree editable="bottom" decoration-muted="(state == 'done' and is_locked == True)" decoration-danger="qty_done&gt;product_uom_qty and state!='done'" decoration-success="qty_done==product_uom_qty and state!='done' and not result_package_id">
                            <field name="product_id" required="1" attrs="{'readonly': ['|', ('state', '=', 'done'), ('move_id', '!=', False)]}" options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="move_id" invisible="1"/>
                            <field name="in_entire_package" invisible="1"/>
                            <field name="product_uom_id" force_save="1" attrs="{'readonly': [('state', '!=', 'draft')]}" groups="product.group_uom" options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="package_id" attrs="{'readonly': [('in_entire_package', '=', True)]}" groups="stock.group_tracking_lot" domain="[('location_id', '=', location_id)]"/>
                            <field name="location_id" attrs="{'readonly': [('in_entire_package', '=', True)]}" groups="stock.group_stock_multi_locations,stock.group_tracking_lot" domain="[('id', 'child_of', parent.location_id)]" options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="location_dest_id" attrs="{'readonly': [('in_entire_package', '=', True)]}" groups="stock.group_stock_multi_locations,stock.group_tracking_lot" domain="[('id', 'child_of', parent.location_dest_id)]" options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="result_package_id" attrs="{'readonly': [('in_entire_package', '=', True)]}" groups="stock.group_tracking_lot" domain="['|', '|', ('location_id', '=', False), ('location_id', '=', location_dest_id), ('id', '=', package_id)]"/>
                            <field name="auto_set"/>
                            <field name="lots_visible" invisible="1"/>
                            <field name="owner_id" groups="stock.group_tracking_owner" options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="state" invisible="1"/>
                            <field name="lot_id" groups="stock.group_production_lot" attrs="{'column_invisible': [('parent.show_lots_text', '=', True)], 'invisible': [('lots_visible', '=', False)], 'readonly': [('in_entire_package', '=', True)]}" domain="[('product_id', '=', product_id)]" context="{'default_product_id': product_id}"/>
                            <field name="lot_name" groups="stock.group_production_lot" attrs="{'column_invisible': [('parent.show_lots_text', '=', False)], 'invisible': [('lots_visible', '=', False)], 'readonly': [('in_entire_package', '=', True)]}" context="{'default_product_id': product_id}"/>
                            <field name="is_initial_demand_editable" invisible="1"/>
                            <field name="product_uom_qty" readonly="1"/>
                            <field name="is_locked" invisible="1"/>
                            <field name="qty_done" attrs="{'readonly': ['|', ('state', 'in', ('done', 'cancel')), ('is_locked', '=', True), ('in_entire_package', '=', True)]}" force_save="1"/>
                        </tree>
                    </field>
                    <field name="entire_package_detail_ids" context="{'picking_id': id, 'tree_view_ref': 'stock.view_quant_package_picking_tree'}" attrs="{'invisible': ['|', ('picking_type_entire_packs', '=', False), ('show_operations', '=', False)]}" readonly="0"/>
                    <button class="oe_highlight" name="put_in_pack" type="object" string="Put in Pack" attrs="{'invisible': ['|',('state', 'in', ('done', 'cancel')),'|',('is_put_in_pack','=',False),('picking_type_code','!=','incoming')]}" groups="stock.group_tracking_lot"/>
                </page>
            </xpath>


            <xpath expr="//sheet/notebook/page[1]/field[2]/tree/field[@name='location_id']" position="replace"/>


            <xpath expr="//sheet/notebook/page[1]/button[@name='put_in_pack']" position="attributes">
                <attribute name="attrs">{'invisible': ['|',('state', 'in', ('done', 'cancel')),'|',('is_put_in_pack','=',False),('picking_type_code','!=','incoming')]}</attribute>
            </xpath>


            <xpath expr="//sheet/notebook/page[1]/field[2]/tree/field[@name='location_dest_id']" position="attributes">
                <attribute name="invisible">False</attribute>
                <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
            </xpath>

            <xpath expr="//sheet/notebook/page[1]/field[2]/tree/field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_open':True,'no_create':True,'no_create_edit':True}</attribute>
            </xpath>

            <xpath expr="//sheet/notebook/page[1]/field[2]/tree/field[@name='product_uom_qty']" position="attributes">
                <attribute name="attrs">{'readonly': False}</attribute>
            </xpath>

            <xpath expr="//sheet/notebook/page[1]/field[2]/tree/field[@name='location_dest_id']" position="after">
                <field name="new_location_id" attrs="{'column_invisible': [('parent.picking_type_code','in',('incoming','outgoing'))]}" domain = "[('is_check_avilable','=', True),('usage','=','internal')]" options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
            </xpath>
            <xpath expr="//sheet/notebook/page[1]/field[2]/tree/field[@name='location_dest_id']" position="before">
                <field name="location_id" attrs="{'column_invisible': [('parent.picking_type_code','=','incoming')]}" domain = "[]" options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
            </xpath>


            <!--<xpath expr="//sheet/notebook/page[2]/field[1]/tree/field[@name='location_id']" position="attributes">-->
                <!--<attribute name="domain">[]</attribute>-->
            <!--</xpath>-->

            <xpath expr="//sheet/notebook/page[2]/field[1]/tree/field[@name='location_dest_id']" position="attributes">
                <attribute name="domain">[]</attribute>
            </xpath>

            <button name="do_print_picking" position="before">
                <button name="gen_lot" string="Gen Serial" type="object" attrs="{'invisible': ['|',('is_gen_lot','=',False),('picking_type_code', '!=', 'incoming')]}"/>
            </button>

            <button name="action_toggle_is_locked" position="after">
                <button name="action_copy_receive" string="COPY TO INTERNAL"  type="object" class="oe_highlight" attrs="{'invisible': [('picking_type_code', '!=', 'incoming'),('state','!=','done')]}"/>
            </button>




            <!--######update 16/12/2018 done###-->
            <!--<xpath expr="//sheet/notebook/page[1]" position="replace"/>-->

            <!--&lt;!&ndash;<attribute name="attrs">{}</attribute>&ndash;&gt;-->
            <!--&lt;!&ndash;</xpath>&ndash;&gt;-->
            <!--<xpath expr="//sheet/notebook/page[1]/field[@name='move_line_ids']/tree/field[@name='result_package_id']" position="after">-->
            <!--<field name="auto_set"/>-->
            <!--</xpath>-->


        </field>
    </record>
</odoo>